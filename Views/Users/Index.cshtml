@using ExpenseTracker.Controllers
@model IEnumerable<UserRowVM>
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>
@if (TempData["Status"] is string s) { <div class="alert alert-success">@s</div> }

<table class="table">
    <thead>
        <tr><th>Email</th><th>Name</th><th>Role</th><th></th></tr>
    </thead>
    <tbody>
@foreach (var u in Model)
{
    <tr>
        <td>@u.Email</td>
        <td>@u.Name</td>
        <td>@u.CurrentRole</td>
        <td><a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-primary">Edit</a></td>
        <td><a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger">Delete</a></td>        
    </tr>
}
    </tbody>
</table>
